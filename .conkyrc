# .conkyrc

alignment top_right
background yes
border_width 1
cpu_avg_samples 2
default_color CCCCCC
color0 999999
default_outline_color grey
default_shade_color black
double_buffer yes
draw_borders no
draw_graph_borders no
draw_outline no
draw_shades yes
gap_x 20
gap_y 20
if_up_strictness link
minimum_size 400 600
net_avg_samples 2
no_buffers yes
out_to_console no
out_to_stderr no
extra_newline no
own_window yes
own_window_colour 101010
own_window_class Conky
own_window_type desktop
stippled_borders 0
text_buffer_size 4096
update_interval 3.0
uppercase no
use_spacer right
use_xft no
show_graph_scale no
show_graph_range no

